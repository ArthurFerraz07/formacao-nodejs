<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs', { categories: categories }) %>

<div class="conteiner">
  <% articles.forEach(article => { %>
    <div class="card">
      <div class="card-header">
        <h2><%= article.title %></h2>
        <h3><%= article.category.title %></h3>
      </div>
      <div class="card-body">
        <a class="btn btn-success" href="/articles/<%= article.slug %>">Ler artigo</a>
      </div>
    </div>
    <br />
  <% }); %> 
</div>

