<%- include('../partials/header.ejs') %> 
<body>
  <%- include('../partials/navbar.ejs') %> 
  <div class="container">
    <div class="card custom">
      <div class="card-body">
        <h3><%= question.title %></h3>
      </div>
      <div class="card-body">
        <p class="card-text"><%= question.body %></p>
      </div>
    </div>
    <hr>
    <div class="card">
      <div class="card-body">
        <h3>Respostas</h3>
      </div>
      <% answers.forEach(answer => { %>
        <div class="card-body">
          <p class="card-text">- <%= answer.body %></p>
        </div>
      <% }); %>
    </div>
    <hr>
    <div class="card">
      <div class="card-body">
        <h3>Responder</h3>
      </div>
    <form class="form-control" method="POST" action="/answers">
      <div class="card-body">
        <textarea placeholder="Escreva sua resposta aqui" class="form-control" name="body"></textarea>
        <input type="hidden" value="<%= question.id %>" name="questionId">
        <br />
        <button class="btn btn-dark">Responder</button>
      </div>
    </form>
    </div>
  </div>
</body>
<%- include('../partials/footer.ejs') %> 
